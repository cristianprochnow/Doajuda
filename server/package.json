  "scripts": {
    "dev": "cross-env SETUP=development ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify src/server.ts",
    "test": "cross-env SETUP=test jest",
    "build": "babel src --extensions \".js, .ts\" --out-dir dist --copy-files --no-copy-ignored",
    "start": "node dist/server.js",
    "knex:migrate": "knex --knexfile knexfile.ts migrate:latest",
